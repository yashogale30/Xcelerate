https://leetcode.com/problems/valid-palindrome/

/* check equality of half of the string, left and right half*/

class Solution {
public:
    bool isPalindrome(string s) 
    {
        string a = "";
        for(auto c : s)
        {
            if(isalpha(c))
                a+=tolower(c);
            else if(isdigit(c))
                a+=c;
        }
        for(int i = 0; i<a.length()/2;i++)
        {
            if(a[i] != a[a.length()-i-1])
                return false;
        }
        return true;
    }
};
